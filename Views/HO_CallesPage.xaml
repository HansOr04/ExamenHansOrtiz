<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenHansOrtiz.Views.HO_CallesPage"
             Title="HO_CallesPage">
    <CollectionView ItemsSource="{Binding Calles}" SelectionMode="Single" SelectionChanged="OnCalleSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Nombre}" FontSize="Medium"/>
                    <Label Text="{Binding TipoVia}" FontSize="Small"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>