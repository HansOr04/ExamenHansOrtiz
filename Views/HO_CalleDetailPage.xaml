<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenHansOrtiz.Views.HO_CalleDetailPage"
             Title="HO_CalleDetailPage">
    <StackLayout Padding="20">
        <!-- Mostrar detalles de la calle -->
        <Label Text="{Binding CalleSeleccionada.Nombre}" FontSize="Large" />
        <Label Text="{Binding CalleSeleccionada.TipoVia}" FontSize="Medium" />
        <Label Text="{Binding CalleSeleccionada.Ubicacion.Zona}" FontSize="Small" />
        <Label Text="{Binding CalleSeleccionada.Caracteristicas.Sentido}" FontSize="Small" />
        <Label Text="{Binding CalleSeleccionada.Caracteristicas.TipoPavimento}" FontSize="Small" />

        <!-- BotÃ³n para guardar la calle -->
        <Button Text="Guardar Calle" Command="{Binding GuardarCalleCommand}" />
    </StackLayout>
</ContentPage>